<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
                <% if (prods.length > 0) { %>
                    <div class="centered">
                        <% for (let item of prods) { %>
                          <div class="item__row">
                            <p class="product__title"> <span class="item__row-title">Product :</span>  <%= item.productId.title %>   <span class="item__row-title">Quantity :</span> <%=item.quantity%></p>
                            <form action="/cart-delete" method="POST">
                              <input type="hidden" value="<%= item.productId._id%>" name="id">
                              <!-- <input type="hidden" value="<%= item.price%>" name="price">
                              <input type="hidden" value="<%= item.quantity%>" name="qty"> -->
                              <button class="btn btn-item__row" type="submit">Delete</button>
                            </form>
                          </div>
                        <% } %>
                    </div>
                    <hr>
                    <form action="/create-order" method="POST" class="centered">
                      <button type="submit" class="btn">Order Now!</button>
                    </form>
                <% } else { %>
                    <h1>No Products in Cart Found!</h1>
                <% } %>
            </main>
        <%- include('../includes/end.ejs') %>